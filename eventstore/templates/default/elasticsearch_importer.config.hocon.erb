elasticsearch_importer {
    aws {
        accessKey = "env"
        secretKey = "env"
    }
    s3 {
        in {
            bucket = <%= @s3.in.bucket%>
            prefix = <%= @s3.in.prefix%>
        }
        archive {
            bucket = <%= @s3.archive.bucket%>
            prefix = <%= @s3.archive.prefix%>
        }
    }
    elasticsearch {
        hostName = <%= @elasticsearch.hostName%>
        port = <%= @elasticsearch.port%>
        cluster = "elasticsearch"
        index = "events"
        type = "event"
        bulk {
            actions = 50
            size = 1 # Byte size in MB
            flush_interval = 5 # in seconds
            concurrent_requests = 1
        }
    }
}